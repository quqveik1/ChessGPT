<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_navigator"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.kurlic.chessgpt.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_HomeToLocal"
            app:destination="@id/LocalGameFragment" />
        <action
            android:id="@+id/action_HomeFragment_to_OnlineGameFragment"
            app:destination="@id/OnlineFragment" />
    </fragment>

    <fragment
        android:id="@+id/LocalGameFragment"
        android:name="com.kurlic.chessgpt.localgames.LocalGameFragment"
        android:label="SecondFragment"
        tools:layout="@layout/localgame_fragment">
        <action
            android:id="@+id/action_LocalGameFragment_to_GameFragment"
            app:destination="@id/GameFragment" />
    </fragment>

    <fragment
        android:id="@+id/GameFragment"
        android:name="com.kurlic.chessgpt.GameFragment"
        android:label="GameFragment"
        tools:layout="@layout/game_fragment">
    </fragment>

    <fragment
        android:id="@+id/OnlineFragment"
        android:name="com.kurlic.chessgpt.online.OnlineGameFindFragment"
        android:label="OnlineGameFragment"
        tools:layout="@layout/findgame_fragment">
    </fragment>

</navigation>